{
  "name": "next-laravel-bridge",
  "version": "1.0.0",
  "description": "Un package NPM qui facilite l'intégration entre Next.js et Laravel avec authentification Sanctum, gestion des formulaires et configuration API centralisée",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "nextjs",
    "laravel",
    "sanctum",
    "authentication",
    "forms",
    "api",
    "react",
    "typescript"
  ],
  "author": "Jourdan Totonde",
  "license": "MIT",
  "peerDependencies": {
    "next": ">=12.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "laravel-echo": ">=1.15.0",
    "pusher-js": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "laravel-echo": {
      "optional": true
    },
    "pusher-js": {
      "optional": true
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "js-cookie": "^3.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/jest": "^29.5.0",
    "@types/js-cookie": "^3.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^30.2.0",
    "rollup": "^3.26.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coddano/next-laravel-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/coddano/next-laravel-bridge/issues"
  },
  "homepage": "https://github.com/coddano/next-laravel-bridge#readme"
}